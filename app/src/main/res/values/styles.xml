<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTextStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_13sdp</item>

    </style>

    <style name="CustomNewTextStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/_1sdp</item>
        <item name="android:textColor">@color/colorBlack</item>

    </style>

    <style name="CustomButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAlignment">center</item>

    </style>

</resources>